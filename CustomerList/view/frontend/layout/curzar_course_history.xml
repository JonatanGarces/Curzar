<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Listado de Cursos</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            	<block template="Curzar_CustomerList::history.phtml" class="Curzar\CustomerList\Block\History" name="curzar_customerlist_block_history" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
